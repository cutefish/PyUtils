#!/usr/bin/python

import sys, imp
sys.dont_write_bytecode=True

def printUsage():
    print "pyutils <package name>"

if len(sys.argv) < 2:
    printUsage()

#modFile, pathName, desc = imp.find_module(sys.argv[1])

#temporary using if clause, to do: using module loading
import pyutils.cluster.main as clusterMain
import pyutils.hadoopec2.main as hadoopec2Main

if (sys.argv[1] == "cluster"):
    clusterMain.run(sys.argv[2:])
elif (sys.argv[1] == "hadoop"):
    hadoopec2Main.run(sys.argv[2:])
